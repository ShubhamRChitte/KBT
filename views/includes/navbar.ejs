<style>
    /* Enhanced navbar styling */
    .responsive-header {
        backdrop-filter: blur(5px);
    }
    
    .navbar {
        padding: 0.8rem 2rem;
    }
    
    .nav-logo {
        display: flex;
        align-items: center;
    }
    
    .logo-text {
        background: linear-gradient(to right, #e4c590, #fff);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        animation: textShine 2s linear infinite;
    }
    
    @keyframes textShine {
        0% { background-position: 0% center; }
        100% { background-position: 200% center; }
    }
    
    .nav-item {
        position: relative;
    }
    
    .nav-icon {
        margin-right: 5px;
        font-size: 1.2rem;
        display: none;
    }
    
    .nav-link {
        display: flex;
        align-items: center;
    }
    
    .admin-link {
        color: var(--gold-crayola) !important;
        font-weight: bold;
    }
    
    .cart-button {
        background: none;
        border: none;
        position: relative;
        cursor: pointer;
        transition: transform 0.3s ease;
    }
    
    .cart-button:hover {
        transform: scale(1.1);
    }
    
    .noofitems {
        position: absolute;
        top: -10px;
        right: -10px;
        background-color: red;
        color: white;
        border-radius: 50%;
        width: 25px;
        height: 25px;
        display: flex;
        justify-content: center;
        align-items: center;
        font-size: 0.8rem;
        font-weight: bold;
    }
    
    .noofitems p {
        margin: 0;
    }
    
    .alert {
        position: fixed;
        top: 80px;
        left: 0;
        right: 0;
        width: 80%;
        max-width: 500px;
        margin: 0 auto;
        padding: 15px;
        border-radius: 8px;
        text-align: center;
        z-index: 1000;
        animation: slideDown 0.3s ease forwards;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
    }
    
    .alert-danger {
        background-color: #ff6b6b;
        color: white;
    }
    
    .alert-success {
        background-color: #51cf66;
        color: white;
    }
    
    @keyframes slideDown {
        from { transform: translateY(-20px); opacity: 0; }
        to { transform: translateY(0); opacity: 1; }
    }
    
    .menu-open-button, .menu-close-button {
        background: none;
        border: none;
        cursor: pointer;
    }
    
    @media screen and (max-width: 768px) {
        .nav-icon {
            display: inline-block;
            margin-right: 10px;
        }
        
        .nav-link {
            justify-content: flex-start;
            width: 100%;
        }
        
        .alert {
            width: 90%;
        }
    }
</style>

<script>
    // Flash messages auto-dismiss
    setTimeout(function() {
        let alerts = document.querySelectorAll('.alert');
        alerts.forEach(function(alert) {
            alert.style.opacity = '0';
            alert.style.transform = 'translateY(-20px)';
            alert.style.transition = 'all 0.3s ease';
            setTimeout(() => {
                alert.style.display = 'none';
            }, 300);
        });
    }, 5000);
</script>