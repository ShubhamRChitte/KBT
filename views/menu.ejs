    <script>
      document.addEventListener('DOMContentLoaded', function() {
        // Add event listeners to all cart buttons
        document.querySelectorAll('.add-cart-btn, .custom-card-btn').forEach(button => {
          button.addEventListener('click', async function(e) {
            e.preventDefault();
            const itemId = this.getAttribute('data-id');
            
            try {
              const response = await fetch(`/kbt/${itemId}/itm`, {
                method: 'POST',
                headers: {
                  'Content-Type': 'application/json'
                }
              });
              
              if (response.ok) {
                const cartCount = await response.text();
                // Update cart count in navbar
                document.querySelector('.noofitems p').innerText = cartCount;
                
                // Visual feedback
                this.innerHTML = 'Added <i class="fas fa-check"></i>';
                this.style.backgroundColor = '#28a745';
                
                // Reset after 1.5 seconds
                setTimeout(() => {
                  if (this.classList.contains('custom-card-btn')) {
                    this.innerHTML = 'Add to Cart';
                    this.style.backgroundColor = '#212529'; // Bootstrap dark color
                  } else {
                    this.innerHTML = 'Add to Cart';
                    this.style.backgroundColor = 'red';
                  }
                }, 1500);
              }
            } catch (error) {
              console.error('Error adding item to cart:', error);
            }
          });
        });
      });
    </script>
