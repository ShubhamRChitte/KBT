<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Menu Management - KBT Cafe</title>
    <link rel="stylesheet" href="/css/kbtcafe.css">
    <style>
        .admin-container {
            max-width: 1200px;
            margin: 120px auto 50px;
            padding: 30px;
        }
        
        .admin-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 30px;
        }
        
        .btn-primary {
            display: inline-block;
            padding: 10px 20px;
            background-color: var(--gold-crayola);
            color: black;
            border-radius: 5px;
            font-weight: bold;
            transition: opacity 0.3s;
            border: none;
            cursor: pointer;
        }
        
        .btn-primary:hover {
            opacity: 0.9;
        }
        
        .btn-danger {
            background-color: #ff6b6b;
            color: white;
        }
        
        .menu-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
            gap: 30px;
        }
        
        .menu-card {
            background-color: var(--eerie-black-2);
            border-radius: 10px;
            overflow: hidden;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.3);
        }
        
        .menu-img {
            height: 200px;
            overflow: hidden;
        }
        
        .menu-img img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 0.3s;
        }
        
        .menu-card:hover .menu-img img {
            transform: scale(1.05);
        }
        
        .menu-content {
            padding: 20px;
        }
        
        .menu-title {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 15px;
        }
        
        .menu-title h3 {
            color: white;
            margin: 0;
        }
        
        .menu-price {
            color: var(--gold-crayola);
            font-weight: bold;
            font-size: 1.2rem;
        }
        
        .menu-desc {
            color: var(--quick-silver);
            margin-bottom: 20px;
            line-height: 1.5;
        }
        
        .menu-actions {
            display: flex;
            gap: 10px;
        }
        
        .alert {
            padding: 10px;
            margin-bottom: 20px;
            border-radius: 5px;
        }
        
        .alert-danger {
            background-color: #ff6b6b;
            color: white;
        }
        
        .alert-success {
            background-color: #51cf66;
            color: white;
        }
        
        .empty-state {
            text-align: center;
            padding: 50px 0;
        }
        
        .empty-state p {
            color: var(--quick-silver);
            margin-bottom: 20px;
        }
    </style>
</head>
<body>
    <%- include("../../includes/navbar") %>
    
    <div class="admin-container">
        <div class="admin-header">
            <h1 class="headline-1">Menu Management</h1>
            <div>
                <a href="/kbt/admin" class="btn-primary" style="margin-right: 10px;">Dashboard</a>
                <a href="/kbt/admin/menu/new" class="btn-primary">Add New Item</a>
            </div>
        </div>
        
        <% if(locals.error && error.length > 0) { %>
            <div class="alert alert-danger">
                <%= error %>
            </div>
        <% } %>
        
        <% if(locals.success && success.length > 0) { %>
            <div class="alert alert-success">
                <%= success %>
            </div>
        <% } %>
        
        <% if(menuItems && menuItems.length > 0) { %>
            <div class="menu-grid">
                <% menuItems.forEach(item => { %>
                    <div class="menu-card">
                        <div class="menu-img">
                            <img src="<%= item.image.url %>" alt="<%= item.title %>">
                        </div>
                        <div class="menu-content">
                            <div class="menu-title">
                                <h3><%= item.title %></h3>
                                <div class="menu-price">â‚¹<%= item.price %></div>
                            </div>
                            <div class="menu-desc">
                                <%= item.description %>
                            </div>
                            <div class="menu-actions">
                                <a href="/kbt/admin/menu/<%= item._id %>/edit" class="btn-primary">Edit</a>
                                <form action="/kbt/admin/menu/<%= item._id %>?_method=DELETE" method="POST" style="display: inline;">
                                    <button type="submit" class="btn-primary btn-danger" onclick="return confirm('Are you sure you want to delete this item?')">Delete</button>
                                </form>
                            </div>
                        </div>
                    </div>
                <% }) %>
            </div>
        <% } else { %>
            <div class="empty-state">
                <h2>No Menu Items Found</h2>
                <p>Start by adding your first menu item!</p>
                <a href="/kbt/admin/menu/new" class="btn-primary">Add Menu Item</a>
            </div>
        <% } %>
    </div>
    
    <script src="/js/kbtcafe.js"></script>
</body>
</html> 